RUN {
      ALLOCATE CHANNEL MY_RMAN1 TYPE disk;
      ALLOCATE CHANNEL MY_RMAN2 TYPE disk;     
      SETLIMIT CHANNEL MY_RMAN1 KBYTES 33554432;
      SETLIMIT CHANNEL MY_RMAN2 KBYTES 33554432;  
      CONFIGURE RETENTION POLICY TO NONE;
      CONFIGURE CONTROLFILE AUTOBACKUP ON;
      BACKUP
          INCREMENTAL LEVEL 0
          TAG For Postgris
          FORMAT '/path-to-backup-dir/full_db_bkup_%d_%U_%t_%T'
          DATABASE;
      RELEASE CHANNEL MY_RMAN1;
      RELEASE CHANNEL MY_RMAN2;    
      }
